{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo with Next.js frontend and Bun + Hono backend",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "build": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "lint": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" lint",
    "lint:fix": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" type-check",
    "test": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" test",
    "clean": "pnpm --recursive --filter \"./apps/*\" --filter \"./packages/*\" clean && rm -rf node_modules",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:test": "docker compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:clean": "docker compose down -v --rmi all"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
