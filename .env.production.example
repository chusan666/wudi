# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application Environment
NODE_ENV=production

# Database Configuration
POSTGRES_USER=your_production_db_user
POSTGRES_PASSWORD=your_production_db_password
POSTGRES_DB=your_production_db_name
DATABASE_URL=postgresql://your_production_db_user:your_production_db_password@postgres:5432/your_production_db_name

# Redis Configuration
REDIS_URL=redis://redis:6379

# Service Ports
API_PORT=3001
WEB_PORT=3000

# Application URLs
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Security & Secrets (generate these with `openssl rand -base64 32`)
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services (if applicable)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Monitoring & Observability
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/home/bunuser/.ms-playwright
PLAYWRIGHT_HEADLESS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com