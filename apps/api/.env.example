# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/notes_db

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache Configuration
COMMENTS_CACHE_TTL=300
COMMENTS_REFRESH_INTERVAL=3600
CACHE_STALE_WHILE_REVALIDATE_TTL=600
BACKGROUND_REFRESH_QUEUE_NAME=cache-refresh

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CRAWLER_MAX_REQUESTS=10

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=30000
CIRCUIT_BREAKER_ERROR_THRESHOLD=5
CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=api
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_JAEGER_ENDPOINT=
OTEL_EXPORTER_PROMETHEUS_PORT=9464
OTEL_RESOURCE_ATTRIBUTES=

# Performance Configuration
PRISMA_CONNECTION_POOL_SIZE=10
PRISMA_QUERY_TIMEOUT=30000
GRACEFUL_SHUTDOWN_TIMEOUT=10000