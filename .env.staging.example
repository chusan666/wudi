# Staging Environment Variables
# Copy this file to .env.staging and fill in your actual values

# Application Environment
NODE_ENV=staging

# Database Configuration
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password
POSTGRES_DB=staging_db
DATABASE_URL=postgresql://staging_user:staging_password@postgres:5432/staging_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Service Ports
API_PORT=3001
WEB_PORT=3000

# Application URLs
NEXT_PUBLIC_API_URL=https://staging-api.yourdomain.com
NEXT_PUBLIC_APP_URL=https://staging.yourdomain.com

# Security & Secrets (generate these with `openssl rand -base64 32`)
JWT_SECRET=staging_jwt_secret_here
SESSION_SECRET=staging_session_secret_here
ENCRYPTION_KEY=staging_encryption_key_here

# External Services (if applicable)
# AWS_ACCESS_KEY_ID=your_staging_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_key
# AWS_REGION=us-east-1

# Monitoring & Observability
# SENTRY_DSN=your_staging_sentry_dsn
# LOG_LEVEL=debug

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/home/bunuser/.ms-playwright
PLAYWRIGHT_HEADLESS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
CORS_ORIGIN=https://staging.yourdomain.com