# Crawler Configuration

# Concurrency & Rate Limiting
CRAWLER_CONCURRENCY=3
CRAWLER_RATE_LIMIT=10
CRAWLER_RATE_WINDOW_MS=60000

# Timeouts & Retries
CRAWLER_TIMEOUT_MS=30000
CRAWLER_RETRY_MAX_ATTEMPTS=3
CRAWLER_RETRY_INITIAL_DELAY_MS=1000
CRAWLER_RETRY_MAX_DELAY_MS=30000

# Circuit Breaker
CRAWLER_CIRCUIT_BREAKER_THRESHOLD=5
CRAWLER_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Browser
CRAWLER_HEADLESS=true

# Proxy (optional)
# CRAWLER_PROXY_URL=http://proxy:8080
# CRAWLER_PROXY_USERNAME=username
# CRAWLER_PROXY_PASSWORD=password

# Environment
NODE_ENV=development
